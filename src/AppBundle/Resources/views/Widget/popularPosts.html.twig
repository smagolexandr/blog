{% if posts %}
    <div class="col-xs-12 well">
        <h4>
            Popular posts:
        </h4>
        {% for post in posts %}
            <div class="message col-md-12 col-sm-6  nopadding">
                {% if post.image %}
                <div class="col-md-3 col-sm-4 nopadding">
                    <img src="{{ post.image }}" alt="{{ post.title }}">
                </div>
                <div class="col-md-9 col-sm-8 content">
                {% else %}
                    <div class="col-md-12 col-sm-12 content">
                {% endif %}
                    <a href="{{ path('single_post', {'slug':post.slug}) }}" class="title">
                        {{ post.title }}
                    </a>
                    <div class="meta">
                        <span><i class="fa fa-clock-o" aria-hidden="true"></i>{{ post.createdAt|date("m/d/Y") }}</span>
                        <span><i class="fa fa-eye" aria-hidden="true"></i>{{ post.views }}</span>
                        {#<span><i class="fa fa-comments" aria-hidden="true"></i>{{ post.comments|length }}</span>#}
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endif %}